        <activity
            android:name=".WednessDay"
            android:label="@string/title_activity_wedness_day"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".ThusDay"
            android:label="@string/title_activity_thus_day"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".MonDay"
            android:label="@string/title_activity_mon_day"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".About"
            android:label="@string/title_activity_about"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
